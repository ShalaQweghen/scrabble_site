<nav class="navbar navbar-expand-lg navbar-light px-5">
  <div class="navbar-brand"></div>

  <% if request.parameters["controller"] == "games" && request.parameters["action"] == "show" %>
    <script type="text/javascript">scrabblize("ScrabbIA", document.getElementsByClassName("navbar-brand")[0], "/", true);</script>

    <%= invitation_link %>
  <% else %>
    <script type="text/javascript">scrabblize("ScrabbIA", document.getElementsByClassName("navbar-brand")[0], "/", false);</script>
  <% end %>
  
  <% if request.parameters["controller"] != "games" || request.parameters["action"] != "show" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <%= invitation_link %>

      <% if user_signed_in? %>
        <%= render "shared/online_users" %>

        <%= render "shared/leader_board" %>
      <% end %>
      
      <ul class="navbar-nav my-2 my-lg-0">
        <%= login_helper %>
      </ul>
    </div>
  <% end %>
</nav>