  <% if request.parameters["controller"] != "games" || request.parameters["action"] != "show" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <%= link_to "You're invited to a game!", "/games/#invitations", id: "invitation", class: "btn btn-danger btn-sm form-inline m-auto #{" invisible" if !current_user || !current_user.invited?}" %>

      <% if current_user %>
        <%= render "shared/online_users" %>

        <%= render "shared/leader_board" %>
      <% end %>
      
      <ul class="navbar-nav my-2 my-lg-0">
        <%= login_helper %>
      </ul>
    </div>
  <% end %>
</nav>