<nav class="navbar navbar-expand-lg navbar-light px-5">
  <div class="navbar-brand"></div>
  <script type="text/javascript">scrabblize("ScrabbIA", document.getElementsByClassName("navbar-brand")[0], "/");</script>

  <% if request.parameters["controller"] == "games" && request.parameters["action"] == "show" %>
    <div class="form-inline m-auto invisible">
    </div>

    <%= link_to "You're invited to a game!", "/games/#invitations", id: "invitation", target: "_blank", class: "btn btn-danger btn-sm #{" invisible" if !current_user || !current_user.invited?}" %>
