<div class="row">
  <div id="board-container" class="col-12 col-md-6 my-5">
    <div id="board"></div>
    <div id="rack"></div>
    <div id="buttons" class="text-center">
      <button id="submit" class="game-button">Submit</button>
      <button id="pass" class="game-button">Pass</button>

      <% if @game.challengable %>
        <button id="challenge" class="game-button">Challenge</button>
      <% end %>

      <button id="shuffle" class="game-button">Shuffle</button>
    </div>
  </div>

  <div id="side-container" class="col-12 mx-auto col-md-6 text-center pb-5">
    <div id="messages-container">
      <div id="messages-area" data-gameid="<%= @game.slug %>"></div>
      <button id="forfeit" class="btn btn-danger btn-sm mt-3">Forfeit</button>
    </div>

    <div id="chat-container" class="mt-5">
      <textarea id="chat" class="d-block w-100" rows="6" disabled readonly></textarea>
      <input type="text" name="chat" id="chat-input" class="w-100" autofocus placeholder="Enter your message here...">
    </div>
  </div>
</div>

<div id="outer-div" class="d-none">
  <div id="inner-div">
    <p id="dialogue-text"></p>
    <input type="text" name="dialogue-input" id="dialogue-input" class="d-block mx-auto mb-3" autofocus>
    <button id="dialogue-cancel" class="btn btn-warning mr-2 btn-sm">CANCEL</button>
    <button id="dialogue-submit" class="btn btn-primary btn-sm">SUBMIT</button>
  </div>
</div>

<script type="text/javascript">
  if (window.location.href.match(/.*\?refresh=true$/)) {
    window.location.href = window.location.href.split("?")[0]
  }
</script>
