<h1>Create a New Game</h1>
<%= form_with(model: @game, local: true) do |form| %>
  <%= form.hidden_field :host_id, value: current_user.id %>
  <%= form.hidden_field :available, value: true %>

  <div class="form-group">
    <%= form.label :time_limit %>
    <%= form.number_field :time_limit, id: :game_time_limit, value: 0, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :points_limit %>
    <%= form.number_field :points_limit, id: :game_points_limit, value: 0, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :challengable, id: :game_challengable, class: "form-control"%>
    <%= form.label :challenge %>
  </div>
  
  <%= submit_tag "Create a New Game" %>
<% end %>