<h1>Join A Game</h1>
<div class="container">
  <% if @games.select {|game| game.available }.empty? %>
    <h3 class="center">NO GAMES CREATED YET</h3>
    <div class="center mt-2"><%= link_to "Create a Game", new_game_path, class: "btn btn-info" %></div>
  <% else %>
    <% @games.each do |game| %>
      <% if game.available && !game.invite %>
        <div class="join-form">
          <%= render "join_form", game: game %>
        </div>
      <% end %>
    <% end %>

    <% if current_user.invited? %>
      <hr>
      <h3 class="center mt-2" id="invitations">Invitations</h3>
      <% @games.each do |game| %>
        <% if game.available && game.invite == current_user.id %>
          <div class="join-form">
            <%= render "join_form", game: game %>
            <%= link_to "Decline", game_path(game.id, declined: true), method: :delete, class: "btn btn-warning d-block" %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
